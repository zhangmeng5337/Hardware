#include "printf.h"
#include "t5los8051.h"
#include "sys.h"

void usart_sendchar(char ch)
{
	SBUF3_TX = ch;
	while((SCON3T & 0x01) == 0);
	SCON3T = 0x80;
}

void usart_sendarr(char *ch, int num)
{
	int i;
	for (i = 0; i < num; i++)
	{
		usart_sendchar(*ch++);
	}
}

void usart_sendstr(char *ch)
{
	while(*ch != '\0')
	{
		usart_sendchar(*ch++);
	}
}
